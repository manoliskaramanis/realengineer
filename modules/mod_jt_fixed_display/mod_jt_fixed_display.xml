        <version>3.5.0</version> 
        <description>MOD_JT_FIXED_DISPLAY_XML_DESCRIPTION</description>
        <files>
			<filename module="mod_jt_fixed_display">mod_jt_fixed_display.php</filename>
			<filename>index.html</filename>
        </files>
		<media destination="mod_jt_fixed_display" folder="media"> 
			<folder>images</folder>
			<folder>assets</folder>
		</media>
		<languages folder="language">
			<language tag="en-GB">en-GB/en-GB.mod_jt_fixed_display.ini</language>
