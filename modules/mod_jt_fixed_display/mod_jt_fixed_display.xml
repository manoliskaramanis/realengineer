		</languages>
   	<config>
		<fields name="params">
			<fieldset name="basic">
				<field name="jtf_maincontentw" type="text" default="1000" label="MOD_JT_FIXED_DISPLAY_PAGE_WIDTH_LABEL" description="MOD_JT_FIXED_DISPLAY_PAGE_WIDTH_DESC" />
				<field type="spacer" label="&lt;hr &#47;&gt;" />
				<field name="" type="list" default="MOD_JT_FIXED_DISPLAY_TOP_POSITION" label="MOD_JT_FIXED_DISPLAY_LEFT_LABEL" description="MOD_JT_FIXED_DISPLAY_LEFT_DESC">
					<option>MOD_JT_FIXED_DISPLAY_TOP_POSITION</option>
					<option>MOD_JT_FIXED_DISPLAY_CENTER_POSITION</option>
					<option>MOD_JT_FIXED_DISPLAY_BOTTOM_POSITION</option>
				</field>
				<field name="" type="list" default="MOD_JT_FIXED_DISPLAY_FIXED" label="MOD_JT_FIXED_DISPLAY_LEFT_OPTION_LABEL" description="MOD_JT_FIXED_DISPLAY_LEFT_OPTION_DESC" >
					<option>MOD_JT_FIXED_DISPLAY_FIXED</option>
					<option>MOD_JT_FIXED_DISPLAY_RESPONSIVE</option>
					<option>MOD_JT_FIXED_DISPLAY_CENTER</option>
					<option>MOD_JT_FIXED_DISPLAY_NONE</option>
				</field>
				<field name="jtf_leftboxw" type="text" default="100" label="MOD_JT_FIXED_DISPLAY_LEFT_BOX_WIDTH_LABEL" description="MOD_JT_FIXED_DISPLAY_LEFT_BOX_WIDTH_DESC" />
				<field name="jtf_leftboxh" type="text" default="200" label="MOD_JT_FIXED_DISPLAY_LEFT_BOX_HEIGHT_LABEL" description="MOD_JT_FIXED_DISPLAY_LEFT_BOX_HEIGHT_DESC" />
				<field name="jtf_lefttype" type="list" default="0" label="MOD_JT_FIXED_DISPLAY_LEFT_TYPE_LABEL" description="MOD_JT_FIXED_DISPLAY_LEFT_TYPE_DESC">
					<option value="0">MOD_JT_FIXED_DISPLAY_IMAGE_LINK</option>
					<option>MOD_JT_FIXED_DISPLAY_MODULE_ID</option>
					<option value="2">MOD_JT_FIXED_DISPLAY_MODULE</option>
				</field>
				<field name="" type="media" directory="banners" default="media/mod_jt_fixed_display/images/jt_fixed_display_left_box.jpg" label="MOD_JT_FIXED_DISPLAY_LEFT_BOX_IMAGE_LABEL" description="MOD_JT_FIXED_DISPLAY_LEFT_BOX_IMAGE_DESC" />
				<field name="" type="text" default="Joomla! Support" label="MOD_JT_FIXED_DISPLAY_LEFT_BOX_IMAGE_ALT_LABEL" description="MOD_JT_FIXED_DISPLAY_LEFT_BOX_IMAGE_ALT_DESC" />
				<field name="" type="url" default="http://www.joomtut.com" label="MOD_JT_FIXED_DISPLAY_LEFT_BOX_LINK_LABEL" description="MOD_JT_FIXED_DISPLAY_LEFT_BOX_LINK_DESC" />
				<field name="" type="list" default="_parent" label="MOD_JT_FIXED_DISPLAY_LEFT_LINK_TARGET_LABEL" description="MOD_JT_FIXED_DISPLAY_LEFT_LINK_TARGET_DESC">
					<option>MOD_JT_FIXED_DISPLAY_LINK_TARGET_PARENT</option>
					<option>MOD_JT_FIXED_DISPLAY_LINK_TARGET_NEW</option>
				</field>
				<field name="" type="text" default="" label="MOD_JT_FIXED_DISPLAY_LEFT_BOX_ID_LABEL" description="MOD_JT_FIXED_DISPLAY_LEFT_BOX_ID_DESC" />
				<field name="jtf_left_position" type="text" default="jt_leftbox" label="MOD_JT_FIXED_DISPLAY_LEFT_BOX_POSITION_LABEL" description="MOD_JT_FIXED_DISPLAY_LEFT_BOX_POSITION_DESC" />
				<field name="jtf_leftboxcss" type="textarea" cols="30" rows="5" default="z-index:99999;" label="MOD_JT_FIXED_DISPLAY_LEFT_BOX_CSS_LABEL" description="MOD_JT_FIXED_DISPLAY_LEFT_BOX_CSS_DESC" />
				<field type="spacer" label="&lt;hr &#47;&gt;" />
				<field name="" type="list" default="MOD_JT_FIXED_DISPLAY_TOP_POSITION" label="MOD_JT_FIXED_DISPLAY_RIGHT_LABEL" description="MOD_JT_FIXED_DISPLAY_RIGHT_DESC">
					<option>MOD_JT_FIXED_DISPLAY_TOP_POSITION</option>
					<option>MOD_JT_FIXED_DISPLAY_CENTER_POSITION</option>
					<option>MOD_JT_FIXED_DISPLAY_BOTTOM_POSITION</option>
				</field>
				<field name="" type="list" default="MOD_JT_FIXED_DISPLAY_FIXED" label="MOD_JT_FIXED_DISPLAY_RIGHT_OPTION_LABEL" description="MOD_JT_FIXED_DISPLAY_RIGHT_OPTION_DESC" >
					<option>MOD_JT_FIXED_DISPLAY_FIXED</option>
					<option>MOD_JT_FIXED_DISPLAY_RESPONSIVE</option>
					<option>MOD_JT_FIXED_DISPLAY_CENTER</option>
					<option>MOD_JT_FIXED_DISPLAY_NONE</option>
				</field>
				<field name="jtf_rightboxw" type="text" default="100" label="MOD_JT_FIXED_DISPLAY_RIGHT_BOX_WIDTH_LABEL" description="MOD_JT_FIXED_DISPLAY_RIGHT_BOX_WIDTH_DESC" />
				<field name="jtf_rightboxh" type="text" default="200" label="MOD_JT_FIXED_DISPLAY_RIGHT_BOX_HEIGHT_LABEL" description="MOD_JT_FIXED_DISPLAY_RIGHT_BOX_HEIGHT_DESC" />
				<field name="jtf_righttype" type="list" default="0" label="MOD_JT_FIXED_DISPLAY_RIGHT_TYPE_LABEL" description="MOD_JT_FIXED_DISPLAY_RIGHT_TYPE_DESC">
					<option value="0">MOD_JT_FIXED_DISPLAY_IMAGE_LINK</option>
					<option>MOD_JT_FIXED_DISPLAY_MODULE_ID</option>
					<option value="2">MOD_JT_FIXED_DISPLAY_MODULE</option>
				</field>
				<field name="" type="media" directory="banners" default="media/mod_jt_fixed_display/images/jt_fixed_display_right_box.jpg" label="MOD_JT_FIXED_DISPLAY_RIGHT_BOX_IMAGE_LABEL" description="MOD_JT_FIXED_DISPLAY_RIGHT_BOX_IMAGE_DESC" />
				<field name="" type="text" default="Joomla! Tutorials and Extensions" label="MOD_JT_FIXED_DISPLAY_RIGHT_BOX_IMAGE_ALT_LABEL" description="MOD_JT_FIXED_DISPLAY_RIGHT_BOX_IMAGE_ALT_DESC" />
				<field name="" type="url" default="http://www.joomtut.com" label="MOD_JT_FIXED_DISPLAY_RIGHT_BOX_LINK_LABEL" description="MOD_JT_FIXED_DISPLAY_RIGHT_BOX_LINK_DESC" />
				<field name="" type="list" default="_parent" label="MOD_JT_FIXED_DISPLAY_RIGHT_LINK_TARGET_LABEL" description="MOD_JT_FIXED_DISPLAY_RIGHT_LINK_TARGET_DESC">
					<option>MOD_JT_FIXED_DISPLAY_LINK_TARGET_PARENT</option>
					<option>MOD_JT_FIXED_DISPLAY_LINK_TARGET_NEW</option>
